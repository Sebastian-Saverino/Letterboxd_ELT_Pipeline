# ==================================================
# Project
# ==================================================
PROJECT_NAME=letterboxd_pipeline
API_ENV=local

# ==================================================
# MinIO (S3-Compatible Object Storage)
# ==================================================
# Root credentials used by MinIO service
MINIO_ROOT_USER=change_me
MINIO_ROOT_PASSWORD=change_me

# Bucket for raw ingested files
MINIO_BUCKET_RAW=raw

# ==================================================
# Postgres — Metadata Database
# Stores ingestion events, file tracking, audit info
# ==================================================
POSTGRES_META_USER=meta_user
POSTGRES_META_PASSWORD=change_me
POSTGRES_META_DB=metadata
POSTGRES_META_PORT=5432

# ==================================================
# Postgres — Warehouse Database
# Stores transformed (silver/gold) analytics data
# ==================================================
POSTGRES_WAREHOUSE_USER=warehouse_user
POSTGRES_WAREHOUSE_PASSWORD=change_me
POSTGRES_WAREHOUSE_DB=warehouse
POSTGRES_WAREHOUSE_PORT=5432

# ==================================================
# FastAPI
# ==================================================
API_HOST=0.0.0.0
API_PORT=8000

# ==================================================
# dbt
# ==================================================
# dbt target profile name
DBT_TARGET=dev

# Directory inside container where profiles.yml lives
DBT_PROFILES_DIR=/usr/app
